{% extends "FrontendWebBundle::layout.html.twig" %}

{% block content %}
        <div id="content">
            <div id="slot-1">
                <div class="search">
                    <div class="tab-1">Réserver maintenant</div>
                    <form action="{{ path("FrontendWebBundle_search_result") }}">
                        <div class="row">
                            <label>De</label>
                            
                            <select name="search[airportDeparture]">
                                <option value="">--</option>
                                {% for aeroport in aeroports %}
                                    <option value="{{ aeroport.id  }}">
                                        {{ aeroport.aeroport  }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="row">
                            <label>Départ</label>
                            <input type="text" name="search[departure]" />
                            <img src="{{ asset('img/calendrier.png') }}" alt="Calendrier" />
                        </div>
                            
                        <div class="row">
                            <label>Vers</label>
                            <select name="search[airportArrival]">
                                <option value="">--</option>
                                {% for aeroport in aeroports %}
                                    <option value="{{ aeroport.id  }}">{{ aeroport.aeroport  }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="row">
                            <label>Retour</label>
                            <input type="text" name="search[return]" />
                            <img src="{{ asset('img/calendrier.png') }}" alt="Calendrier" />
                        </div>
                        
                        <div class="row-radio">
                            <input id="return-0" type="radio" name="search[withReturn]" value="0" checked="checked" />
                            <label for="return-0">Aller simple</label>
                        </div>
                            
                        <div class="row-radio"> 
                            <input id="return-1" type="radio" name="search[withReturn]" value="1" />
                            <label for="return-0">Aller retour</label>
                        </div>
                        
                        <div class="row-sep">&nbsp;</div>
                            
                        <div class="row-select">
                            <label>Adulte</label>
                            <select name="search[adult]">
                                {% for i in range(0, 10) %}
                                    <option value="{{ i }}" {% if loop.index == 1 %}selected="selected"{% endif %}>{{ i }}</option>
                                {% endfor %}
                            </select>                        
                        </div>
                            
                        <div class="row-select">
                            <label>Enfant(2-11 ans)</label>
                            <select name="search[children]">
                                {% for i in range(0, 10) %}
                                    <option value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                            </select>        
                        </div>

                        <div class="row-select">
                            <label>Bébé (< 2 ans)</label>
                            <select name="search[babies]">
                                {% for i in range(0, 10) %}
                                    <option value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                            </select>                        
                        </div>
                        
                        <div class="row-info">
                            <label>Tous les prix sont en (€)</label>    
                        </div>
                        
                        <div class="row-submit">
                            <input type="image" src="{{ asset("img/rechercher_btn.png") }}" />
                        </div>
                    </form>
                </div>
                <div class="search-picture">
                    <img src="{{ asset("img/promo_ete.jpg") }}" alt="" />
                </div>
            </div>
            <div id="slot-2">
                <p class="villes">
                    <img src="{{ asset("img/villes.png") }}" alt="" />
                </p>                
            </div>
            
            <div id="slot-3">
                <div class="newsletter">
                    <img src="{{ asset("img/newsletter.png") }}" alt="" />
                    <img src="{{ asset("img/newsletter_icon.png") }}" alt="" />
                    <p>Recevez nos dernières promotions & infos exclusifs</p>
                    <form>
                        <input id="email" type="input" name="email" />
                        <input type="image" src="{{ asset("img/newsletter_btn.png") }}" />
                    </form>
                </div>
                <div class="offre-1">
                    <img src="{{ asset("img/offre_hotel.png") }}" alt="" />
                </div>
                <div class="offre-2">
                    <img src="{{ asset("img/offre_location.png") }}" alt="" />
                </div>
                <div class="offre-3">
                    <img src="{{ asset("img/offre_croisiere.png") }}" alt="" />
                </div>
            </div>
            
        </div>    
{% endblock %}