{% extends 'BackendAdminBundle::layout.html.twig' %}

{% block content %}
<div id="content">
    <h1>Client list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>{{ pager_sort('Id', 'c.id')|raw }}</th>
                <th>{{ pager_sort('Titre', 'c.titre')|raw }}</th>
                <th>{{ pager_sort('Nom', 'c.nom')|raw }}</th>
                <th>{{ pager_sort('Prenom', 'c.prenom')|raw }}</th>
                <th>{{ pager_sort('Nationalite', 'c.nationalite')|raw }}</th>
                <th>{{ pager_sort('Paysresidence', 'c.paysResidence')|raw }}</th>
                <th>{{ pager_sort('Gsm', 'c.gsm')|raw }}</th>
                <th>{{ pager_sort('Email', 'c.email')|raw }}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pager %}
            <tr>
                <td><a href="{{ path('client_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titre }}</td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.nationalite }}</td>
                <td>{{ entity.paysResidence }}</td>
                <td>{{ entity.gsm }}</td>
                <td>{{ entity.email }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('client_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('client_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <p>{{ pager_pagination(pager, 'BackendCoreBundle:Pager:sliding.html.twig')|raw }} </p>
    <ul>
        <li>
            <a href="{{ path('client_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
</div>
{% endblock %}