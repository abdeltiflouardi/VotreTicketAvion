{% extends 'BackendAdminBundle::layout.html.twig' %}

{% block content %}
<h1>{{ 'Airoport'|trans }}</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Aeroport</th>
            <td>{{ entity.aeroport }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('airoport') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('airoport_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('airoport_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
